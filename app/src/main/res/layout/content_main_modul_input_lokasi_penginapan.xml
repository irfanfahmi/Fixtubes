<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".modul_input_lokasi_penginapan_Activity"
    android:orientation="vertical"
    tools:showIn="@layout/activity_modul_input_lokasi_penginapan">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/scrollViewp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearMainp">

        </LinearLayout>
    </ScrollView>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="213dp"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                android:id="@+id/ivFotopenginapan"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@android:drawable/ic_menu_camera" />

                <ImageView
                    android:id="@+id/ivGallerypenginapan"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@android:drawable/ic_menu_gallery" />
            </LinearLayout>

            <Button
                android:id="@+id/carilokasip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cari Lokasi" />

            <EditText
                android:id="@+id/namapenginapan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Nama Penginapan" />
            <EditText
                android:id="@+id/alamatpenginapan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Alamat" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <EditText
                    android:id="@+id/latitude"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:hint="Latitude" />
                <EditText
                    android:id="@+id/longitude"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:hint="Longitude" />
            </LinearLayout>

        </LinearLayout>


    </ScrollView>





</RelativeLayout>